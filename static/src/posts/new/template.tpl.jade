h1 add new post
form(   name='newPostForm'
        ng-submit='onSubmit(newPostForm.$valid, post)'
        novalidate )
    select(ng-model='post.type' ng-options='type for type in ["regular", "daily"]')
    input(type='text' ng-model='post.title')
    textarea(ng-model='post.original_content')
    button(type='submit') submit
